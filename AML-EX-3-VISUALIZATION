 import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

df=pd.read_csv("C:/Users/HP/OneDrive/Desktop/machine learning datasets/marksheet.csv")
df

df['Total'] = df[['Maths', 'Science', 'English', 'History']].sum(axis=1)
top_student = df.loc[df['Total'].idxmax()]
print("\nTop Student:\n", top_student)

# bar plot
subject_means = df[['Maths', 'Science', 'English', 'History']].mean()
subject_means.plot(kind='bar', color='skyblue')
plt.title('Average Marks by Subject')
plt.xlabel('Subjects')
plt.ylabel('Average Marks')
plt.show()

#heatmap
corr = df[['Maths', 'Science', 'English', 'History']].corr()

plt.figure(figsize=(8, 6))
sns.heatmap(corr, annot=True, cmap='coolwarm', linewidths=0.5)
plt.title('Correlation between Subjects')
plt.show()

#boxplot
plt.figure(figsize=(6, 4))
sns.boxplot(x='Section', y='Science', data=df, palette='Set2')
plt.title('Distribution of Science Marks by Section')
plt.show()

# Scatter plot to show the relationship between Math and Science marks
plt.figure(figsize=(6, 4))
sns.scatterplot(x='Maths', y='Science', hue='Gender', data=df,s=100,palette='cool')
plt.title('Math vs Science Marks by Gender')
plt.show()



