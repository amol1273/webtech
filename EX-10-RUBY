CREATE RUBY FILE  (PERSON.RB):
class Person
  # Initialize the class with name, age, and email attributes
  def initialize(name, age, email)
  @name = name
  @age = age
  @contact = email
  end
  # Getter for the name
  def name
  @name
  
  end
  # Setter for the name
  def name=(name)
  @name = name
  end
  # Getter for the age
  def age
  @age
  end
  # Setter for the age
  def age=(age)
  @age = age
  end
  # Getter for the email
  def email
  @contact
  end
  # Setter for the email
  def email=(email)
  @contact = email
  end
  end

  CREATE RUBY FILE (TEST_PERSON.RB)
  
  require_relative 'person'
# Create a new Person object
person = Person.new('Alice', 30, 'alice@example.com')
# Retrieve and print the initial values
puts "Name: #{person.name}"
puts "Age: #{person.age}"
puts "Email: #{person.email}"
# Modify the person's attributes

person.name = 'Bob'
person.age = 35
person.email = 'bob@example.com'

# Retrieve and print the updated values
puts "Updated Name: #{person.name}"
puts "Updated Age: #{person.age}"
puts "Updated Email: #{person.email}"
